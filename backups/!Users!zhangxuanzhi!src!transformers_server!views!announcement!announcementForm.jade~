block announcementForm
  .form-group
    label Id
    input.form-control(type='text', name='id', value=announcement._id)
  .form-group
    label ServerId
    input.form-control(type='text', name='serverId', value=announcement.serverId)
  .form-group
    label Title
    input.form-control(type='text', name='title', value=announcement.title)
  .form-group
    label Content
    input.form-control(type='text', name='content', value=announcement.content)
  .form-group
    label Sort
    input.form-control(type='text', name='sort', value=announcement.sort)
  .form-group
    label Link
    select.form-control(name='link')
      - for (var link in linkTable)
        if announcement.link == link
          option(value=link, selected) #{ linkTable[link] }
        else
          option(value=link) #{ linkTable[link] }
  .form-group
    label Show
    select.form-control(name='show')
      - for (var show in boolTable)
        if announcement.show == show
          option(value=show, selected) #{ boolTable[show] }
        else
          option(value=show) #{ boolTable[show] }
  .form-group
    label Broadcast
    select.form-control(name='broadcast')
      - for (var broadcast in boolTable)
        if announcement.broadcast == broadcast
          option(value=broadcast, selected) #{ boolTable[broadcast] }
        else
          option(value=broadcast) #{ boolTable[broadcast] }
  .form-group
    label hot
    select.form-control(name='hot')
      - for (var hot in boolTable)
        if announcement.broadcast == broadcast
          option(value=hot, selected) #{ boolTable[hot] }
        else
          option(value=hot) #{ boolTable[hot] }
  button.btn.btn-default(type='submit') 确定
